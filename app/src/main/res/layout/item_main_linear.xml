<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_150"
    android:padding="@dimen/dp_10">


    <ImageView
        android:id="@+id/iv_item_main_linear_thumbnail"
        android:layout_width="@dimen/dp_150"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dp_10"
        android:contentDescription="@string/str_content_description_thumbnail"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/tv_item_main_linear_label"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/label_category_blog" />

    <TextView
        android:id="@+id/tv_item_main_linear_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_item_main_linear_label"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_toStartOf="@id/iv_item_main_linear_thumbnail"
        android:layout_toEndOf="@id/tv_item_main_linear_label"
        android:gravity="center|start"
        android:maxLines="1"
        android:text="@string/label_category_blog" />

    <TextView
        android:id="@+id/tv_item_main_linear_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_main_linear_label"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toStartOf="@id/iv_item_main_linear_thumbnail"
        android:gravity="center|start"
        android:lines="2"
        android:maxLines="2"
        android:text="@string/label_category_blog" />

    <TextView
        android:id="@+id/tv_item_main_linear_datetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_main_linear_title"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toStartOf="@id/iv_item_main_linear_thumbnail"
        android:gravity="center"
        android:text="@string/label_category_blog" />


</RelativeLayout>